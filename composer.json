{
  "require": {
    "ext-gd": "*",
    "craftcms/cms": "^3.0.0",
    "csanquer/pdo-service-provider": "~1.1dev",
    "fortrabbit/craft-copy": "1.0.0-RC5",
    "vlucas/phpdotenv": "^2.4.0"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
